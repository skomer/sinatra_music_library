<h2>Here are all the artists</h2>

<% @artists.each do |artist| %>
  <h3><%= artist.name %></h3>
    <% albums = Album.find(artist.id) %>
    <ul>
      <% albums.each do |album| %>
        <li><%= album %></li>
      <% end %>
      <li><a href="/albums/new">add another album...</a></li>
    </ul>
  <hr>
<% end %>